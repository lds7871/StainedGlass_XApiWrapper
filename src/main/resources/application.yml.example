spring:
  application:
    name: Auto_Scheduled_Task
  session:
    store-type: memory
    timeout: 1800  # 30 分钟
    cookie:
      http-only: true
      max-age: 1800 
      name: JSESSIONID
      path: /
      secure: false
  datasource:
    # 数据库连接 URL - 根据实际情况修改
    url: jdbc:mysql://数据库地址:3306/数据库名?useUnicode=true&characterEncoding=utf-8&serverTimezone=Asia/Shanghai&allowPublicKeyRetrieval=true&useSSL=false
    # 数据库用户名
    username: 数据库用户名
    # 数据库密码
    password: 数据库密码
    driver-class-name: com.mysql.cj.jdbc.Driver
  jpa:
    hibernate:
      ddl-auto: none
    generate-ddl: false
    show-sql: true
    properties:
      hibernate:
        dialect: org.hibernate.dialect.MySQL8Dialect
        format_sql: true
  sql:
    init:
      mode: never

# 安全配置
security:
  # IP白名单配置 - 只允许本地和指定IP访问
  ip-whitelist-enabled: true  # 是否启用IP白名单过滤，生产环境建议设置为 true
  # IP白名单列表 - 允许访问的IP地址
  ip-whitelist:
    - 127.0.0.1           # IPv4 本地环回
    - ::1                 # IPv6 本地环回
    - localhost           # 本地主机名
    - 0:0:0:0:0:0:0:1    # IPv6 完整形式
    - 999.999.999.999     # 指定服务器IP

  
  # Pass Token配置 - 通过令牌绕过IP白名单限制
  pass-token-enabled: true  # 是否启用pass_token功能，生产环境建议设置为 true
  # Pass Token列表 - 允许通过的令牌（可以绕过IP白名单）
  pass-tokens:
    - "00000"   
    - "AAAA"   
    # 令牌可以通过以下方式在请求中传递：
    # 1. Authorization header: "Authorization: Bearer your-secret-token-1"
    # 2. Custom header: "X-Pass-Token: your-secret-token-1"
    # 3. Query parameter: "/api/endpoint?pass_token=your-secret-token-1"




# Twitter OAuth 2.0 配置
# 请到 https://developer.twitter.com/en/portal/dashboard 获取这些凭证
twitter:
  oauth:
    # 从 Twitter Developer Portal 获取 Client ID
    # 步骤: 登录 developer.twitter.com -> Projects & Apps -> 选择 App -> Keys and tokens
    client-id: 你的_CLIENT_ID
    # 从 Twitter Developer Portal 获取 Client Secret
    client-secret: 你的_CLIENT_SECRET
    # 必须与 Twitter App 设置中的 Redirect URIs 相同（这里只要IP不要端口）
    callback-url: http://公网IP/api/twitter/callback（这里只要IP不要端口）
    # 申请的权限范围
    scopes: tweet.read tweet.write users.read offline.access media.write like.write

mybatis-plus:
  mapper-locations: classpath:mapper/*.xml
  configuration:
    log-impl: org.apache.ibatis.logging.stdout.StdOutImpl
    map-underscore-to-camel-case: true
  global-config:
    db-config:
      id-type: auto
      table-underline: true

server:
  port: 8090
  servlet:
    context-path: /

logging:
  level:
    root: INFO
    LDS.Person: DEBUG
    org.springframework.web: WARN
    org.springframework.web.servlet.DispatcherServlet: WARN
    org.springframework.web.servlet.handler: WARN
    org.apache.coyote: WARN
    org.apache.coyote.http11: WARN
    org.apache.tomcat: WARN
    org.hibernate.SQL: DEBUG
    com.baomidou.mybatisplus: DEBUG
